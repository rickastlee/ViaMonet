<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid
                android:color="@android:color/transparent" />
            <corners
                android:radius="@dimen/bk" />
            <stroke
                android:width="@dimen/r"
                android:color="@android:color/black" />
        </shape>
    </item>
    <item
        android:gravity="bottom|center">
        <inset
            android:insetBottom="@dimen/p">
            <shape
                android:shape="oval">
                <stroke
                    android:width="@dimen/r"
                    android:color="@android:color/black" />
                <solid
                    android:color="@android:color/transparent" />
                <size
                    android:height="@dimen/o"
                    android:width="@dimen/o" />
            </shape>
        </inset>
    </item>
</layer-list>